<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	
	<!-- 
		not null이 아닌 nullable 컬럼에 null이 넘어왔을때 jdbcType을 명시해주지 않으면 TypeException이 발생된다. 
		#{속성명, jdbcType=INTEGER} 각각 sql문에 따로 처리하거나 아래와 같이 한번에 처리 가능하다.
	-->
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
	</settings>
	
	
	<!-- typeAliases 자주 사용하는 패키지의 클래스를 별칭을 달아 쉽게 사용할수 있게 -->
	<typeAliases>
		<typeAlias type="test.spring.bean.TestDTO" alias="testDTO"/>
	</typeAliases>


	<!-- 매퍼들의 위치를 설정 -->
	<mappers>
		<mapper resource="/sql/testSQL.xml" />
		<!-- 3. webapp > mybatis > mybatis-config.xml > 해당 <mapper> 추가하기. -->
		<mapper resource="/sql/mybatisSQL.xml" />
	</mappers>









</configuration>